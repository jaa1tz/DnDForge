@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section>
    <h1>Register New Account</h1>
    <form method="post">
        <label asp-for="UserName">Username:</label>
        <br />
        <input asp-for="UserName" type="text" required minlength="6" maxlength="20" />
        <br />
        <label asp-for="Password">Password:</label>
        <br />
        <input asp-for="Password" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,25}" title="Must contain at least one number, one uppercase and lowercase letter, and be between 8 and 25 characters long." required />
        <br />
        <label asp-for="PasswordVerify">Verify Password:</label>
        <br />
        <input asp-for="PasswordVerify" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,25}" title="Must contain at least one number, one uppercase and lowercase letter, and be between 8 and 25 characters long." required />
        <br />
        <input type="submit" value="Submit" />
    </form>
</section>